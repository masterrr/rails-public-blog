<div class="span4">
	<div class="post-form">
		<%= form_tag(:controller => "post", :action => "create") do %>
			<legend>New Post</legend>
			<label>Post title</label>
			<%= text_field_tag(:title, "", :placeholder => "Title") %>
			<label>Post text</label>
		  	<%= text_area_tag(:bodytext, "", :placeholder => "Body") %>
		  	<br>
		  	<%= submit_tag "Post", :class => 'btn btn-primary btn-large' %>
		<% end %>
	</div>
</div>
<div class="span7 offset1">
	<div class="post-list">
	<legend>Posts list</legend>
	  	<% @posts.each do |post| %>
	  		<div class="post">
	  			<span class="title">
	  				<legend><%= post.title %></legend>
	  			</span>
	  			<span class="fulltext">
	  				<%= post.bodytext %>
	  			</span>
	  			<span class="ip">
	  				<%= post.ip %>
	  			</span>
	  			<span class="ip">
	  				<%= post.created_at %>
	  			</span>
	  		</div>
	  	<% end %>
	 </div>
</div>